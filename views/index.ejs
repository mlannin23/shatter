<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>The Backseat</title>

    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Merriweather:300,300italic,400,400italic,700,700italic' type='text/css'>
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/base.css' />
    <link rel='stylesheet' href='/stylesheets/index.css' />
  </head>
  <body>
    <header class="header">
      <div class="container-fluid">
        <h1>the backseat</h1>
      </div>
    </header>

    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-8">
            <% if (mainFeaturedPost) { %>
              <div class="main-feature">
                <img src="<%= mainFeaturedPost.thumbnailUrl %>" class="img-responsive">
                <a href="<%= mainFeaturedPost.url %>"><h2><%= mainFeaturedPost.title %></h2></a>
                <p>by <%= mainFeaturedPost.author.name %></p>
              </div>
            <% } %>
            <% if (featuredPosts) { %>
              <div class="features">  
                <div class="row feature">
                  <div class="col-sm-5 col-xs-4">
                    <img src="<%= featuredPosts[0].thumbnailUrl %>" class="img-responsive">
                  </div>
                  <div class="col-sm-7 col-xs-8">
                    <a href="<%= featuredPosts[0].url %>"><h2><%= featuredPosts[0].title %></h2></a>
                    <p>by <%= featuredPosts[0].author.name %></p>
                  </div>
                </div>
                <% if (featuredPosts.length > 1) { %>
                  <div class="row feature">
                    <div class="col-sm-7 col-xs-8">
                      <a href="<%= featuredPosts[1].url %>"><h2><%= featuredPosts[1].title %></h2></a>
                      <p>by <%= featuredPosts[1].author.name %></p>
                    </div>
                    <div class="col-sm-5 col-xs-4">
                      <img src="<%= featuredPosts[1].thumbnailUrl %>" class="img-responsive">
                    </div>
                  </div>
                <% } %>
              </div>
            <% } %>
            <div class="recent">
              <h2 class="page-header">Latest Stories</h2>
              <% for (i = 0; i < recentPosts.length; i++) { %>
                <div class="recent-post <%= recentPosts[i].thumbnailUrl ? 'featured-image' : '' %>">
                  <% if (recentPosts[i].thumbnailUrl) { %>
                    <img src="<%= recentPosts[i].thumbnailUrl %>" class="img-responsive">
                  <% } %>
                  <a href="<%= recentPosts[i].url %>"><h4><%= recentPosts[i].title %></h4></a>
                  <p>by <%= recentPosts[i].author.name %></p>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <footer class="footer">
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-6">
            <p>&copy; the backseat</p>
          </div>
          <div class="col-sm-6">
            <ul class="footer-links pull-right">
              <li><a href="#">About</a></li>
              <li>&middot;</li>
              <li><a href="#">Contact</a></li>
            </ul>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
